.equip {
  background: #f4f4f4;
  height: 100%;
}

.equip_form {
  background: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 30rpx;
}

.equip_form_item {
  padding: 20rpx 0;
  border-top: 1px solid #e5e5e5;
}

.equip_form .equip_form_item:first-child {
  border-top: none;
}

.equip_form_item_picker {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.equip_form_item_picker:first-child {
  border-top: none;
}

.equip_form_item_picker text {
  font-size: 35rpx;
  color: #333;
  font-weight: 500;
}

.equip_form_item_picker_right {
  vertical-align: middle;
  height: 40rpx;
  width: 40rpx;
}

.equip_list {
  margin-top: 50rpx;
  background: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}

.equip_list_item {
  padding: 10rpx;
}

.equip_list_item > view {
  float: left;
}

.equip_list_item > view:first-child {
  margin-right: 20rpx;
}

.equip_list_item_img {
  width: 100rpx;
  height: 100rpx;
}

.equip_list_item_img image {
  width: 100%;
  height: 100%;
}

.equip_list_item_name {
  color: #333;
  font-weight: 600;
  font-size: 30rpx;
}

.equip_list_item .equip_list_item_quality {
  float: right;
  color: #ff0;
}

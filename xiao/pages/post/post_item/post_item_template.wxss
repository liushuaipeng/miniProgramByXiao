.post_wrap {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post_avatar_date {
  margin-top: 10rpx 0 20rpx 10rpx;
}

.post_avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post_date {
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.post_title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
  text-align: center;
}

.post_image {
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.post_dec {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post_like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post_like_image {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post_like_font {
  vertical-align: middle;
  margin-right: 20px;
}

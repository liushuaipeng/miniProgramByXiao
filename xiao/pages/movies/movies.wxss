/* pages/movies/movies.wxss */
@import "movie_list/movie_list_template.wxss";

.wrapper {
  background-color: #f2f2f2;
}

.movies_template {
  margin-bottom: 30rpx;
}

.search {
  background-color: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 28rpx;
}
.search_img {
  margin: auto 0 auto 20rpx;
}
.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}
